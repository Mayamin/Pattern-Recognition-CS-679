PP=g++
CFLAGS=-I /usr/include/eigen3

all: experiment_1

run: experiment_1
	@echo "============================================================================================="
	@echo "\tStarting Experiment 1..."
	@echo "============================================================================================="
	./bin/experiment_1 data/dataset_A.csv
	@echo "============================================================================================="
	@echo "\tStarting Experiment 2..."
	@echo "============================================================================================="
	./bin/experiment_1 data/dataset_B.csv
	@echo "============================================================================================="
	@echo "\tPlotting Data..."
	@echo "============================================================================================="
#	python3 scripts/plot.py

experiment_1: src/main.cpp
	$(PP) $(CFLAGS) -o bin/experiment_1 src/main.cpp

plot: data/data.csv data/decision_boundary.csv
	@echo "============================================================================================="
	@echo "\tPlotting Data..."
	@echo "============================================================================================="
	python3 scripts/plot.py

clean:
	rm -rf ./bin/*